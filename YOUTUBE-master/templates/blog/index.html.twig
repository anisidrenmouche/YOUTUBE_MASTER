{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

<br> <br>
<div class="row">

{% for article in articles %}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
            <div class="metadate"> Ecrit le {{article.createdAT | date ('d/m/Y')}} à {{article.createdAt | date ('h:i')}} </div>
              <a href="#"><img class="card-img-top" src="{{article.image}}" alt=""></a>
              <div class="card-body">

                <h4 class="card-title">
                  <a href="#">{{article.title}}</a>
                  
                </h4>
                <h5>$24.99</h5>
                <p class="card-text">{{ article.content | raw }}</p>
                 <a href="{{path('blog_show', {id: article.id})}}" class="btn btn-primary"> voir la suite </a>
                 
              </div>
              <div class="card-footer">
                <small class="text-muted">★ ★ ★ ☆ ☆</small>
              </div>
            </div>
          </div>

           {% endfor %}

{% endblock %}
